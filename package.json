{
  "name": "resource-provider-mcp",
  "version": "1.1.0",
  "description": "Resource Provider MCP server - provides hierarchical resources from markdown files with metadata.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "resource-provider-mcp": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "tsc && node dist/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"scripts/**/*.mjs\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"scripts/**/*.mjs\"",
    "typecheck": "tsc --noEmit",
    "quality": "npm run typecheck && npm run lint && npm run format:check && npm test",
    "tool:getAvailableResources": "node scripts/test-direct.mjs getAvailableResources",
    "tool:getResourceContent": "node scripts/test-direct.mjs getResourceContent",
    "tool:findResourceByPhrases": "node scripts/test-direct.mjs findResourceByPhrases"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.46.3"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/krzysztofsurdy/resource-provider-mcp"
  }
}
